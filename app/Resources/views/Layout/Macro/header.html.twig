{% macro header(isIndex) %}
    <header id="header"{% if isIndex %} class="alt"{% endif %}>
        <h1 id="logo"><a href="{{ path('app_homepage') }}">Carspotted</a></h1>
        <nav id="nav">
            <ul>
                <li><a href="{{ path('app_homepage') }}">Home</a></li>
                {% if is_granted('ROLE_USER') %}
                    <li id="logout"><a href="{{ path('fos_user_security_logout') }}">Log out</a></li>
                {% else %}
                    <li><a href="{{ path('fos_user_registration_register') }}">Register</a></li>
                    <li id="login"><a href="{{ path('fos_user_security_login') }}">Sign in</a></li>
                {% endif %}
            </ul>
        </nav>
    </header>
{% endmacro %}
